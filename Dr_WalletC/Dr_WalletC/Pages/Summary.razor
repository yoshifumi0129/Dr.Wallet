@{
    var Rate = (SumExpense / (SumIncome*0.8))*100;
    ExpenditureRate = Rate.ToString("0.0");

    switch (Rate)
    {
        case  <=70:
            Level = "S";
            break;
        case  <=80:
            Level = "A";
            break;
        case <= 90:
            Level = "B";
            break;
        case <= 100:
            Level = "C";
            break;
        case <= 200:
            Level = "D";
            break;
    }


 
    
